<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    tools:context="com.fourfoureight.lolhelper"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >
            
           	<RelativeLayout
                android:layout_width="fill_parent"
        		android:layout_height="fill_parent"
        		android:layout_alignParentRight="true"
	        	android:layout_alignParentTop="true"  >
    
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/barrier" />
    
    <TextView
        android:id="@+id/nameDis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="65dp"
        android:textColor="#FFFFFF"
        android:text="name"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/effectDis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginTop="65dp"
		android:layout_marginLeft="15dp"
		android:textColor="#FFFFFF"
        android:text="effect"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/cooldownDis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/effectDis"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="#FFFFFF"
        android:text="cooldown"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/rangeDis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cooldownDis"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="#FFFFFF"
        android:text="range"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <TextView
        android:id="@+id/breakstealthDis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rangeDis"
        android:layout_alignLeft="@+id/rangeDis"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:text="breakstealth"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <TextView
        android:id="@+id/levelDis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breakstealthDis"
        android:layout_alignLeft="@+id/breakstealthDis"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:text="level"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    
   
</RelativeLayout>
</ScrollView>     
</RelativeLayout>
</FrameLayout>